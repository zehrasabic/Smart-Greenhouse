<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThingSpeakActivity">
    <include
        layout="@layout/content_mainn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:alpha="0.6">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:itemIconSize="29dp"
            android:id="@+id/bottom_navigationn"
            app:itemBackground="@color/mygreen1"
            app:itemTextColor="@drawable/selector"
            app:itemIconTint="@drawable/selector"
            app:menu="@menu/bottom_navigation1"
            android:layout_alignParentBottom="true"
            app:itemTextAppearanceActive="@style/NavDrawerTextStyle"
            app:itemTextAppearanceInactive="@style/NavDrawerTextStyle"/>
    </LinearLayout>
</RelativeLayout>