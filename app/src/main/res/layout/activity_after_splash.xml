<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grasss"
    tools:context=".AfterSplash">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/green2"
            android:alpha="0.8"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/circle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:alpha="0.8"/>
    <ImageView
        android:id="@+id/ikona"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/iconndd"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="100dp"
        android:alpha="0.8"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="UPRAVLJANJE I NADZOR STAKLENIKA/PLASTENIKA"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:fontFamily="@font/abovedemo"
        android:textStyle="bold"
        android:textColor="#2E3C1A"
        android:layout_marginTop="235dp"
        android:id="@+id/naziv"
        android:alpha="0.8" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="570dp">
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="SMS"
            android:id="@+id/idSms"
            android:textColor="#2E3C1A"
            android:fontFamily="@font/abovedemo"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/ripple_effect">
        </Button>
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="200dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#2E3C1A"
            android:fontFamily="@font/abovedemo"
            android:layout_height="wrap_content"
            android:text="GPRS"
            android:id="@+id/idThingspeak"
            android:background="@drawable/ripple_effect">
        </Button>
    </LinearLayout>
</RelativeLayout>